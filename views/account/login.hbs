<h1>Login Page</h1>
<section id="logInSection">
     <form method="post" action="/login" id="logIn">
          <fieldset id="log">
               <legend>Log In</legend>
               <br>
               <label for="logInEmail">Email Address</label>
               <input id="logInEmail" name="email" type="email" tabindex="1" placeholder="example@cookzilla.com"/>
               {{#if errorMessages.email}}
                    <br>
                    <span class="error">{{errorMessages.email}}</span>
               {{/if}}
               <br>
               <br>
               <label for="logInPassword">Password</label>
               <input id="logInPassword" name="password" type="password" tabindex="2" placeholder="Type Here..."/>
               {{#if errorMessages.password}}
                    <br>
                    <span class="error">{{errorMessages.password}}</span>
               {{/if}}
               {{#if errorMessages.invalid}}
                    <br>
                    <span class="error">{{errorMessages.invalid}}</span>
               {{/if}}
               {{#if errorMessages.databaseError}}
                    <br>
                    <span class="error">{{errorMessages.databaseError}}</span>
               {{/if}}
               <br>
               <br>
               <input type="radio" id="dataClerk" name="userType" value="dataClerk">
               <label for="dataClerk"> data Clerk</label><br>
               <input type="radio" id="customer" name="userType" value="customer" checked>
               <label for="customer"> customer</label><br>
               <br>
               <input type="submit" name="submit" value="Log In" tabindex="3"/>
          </fieldset>
     </form>
</section>